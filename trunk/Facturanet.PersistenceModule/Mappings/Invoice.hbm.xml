<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Facturanet.Core" namespace="Facturanet.Entities">
  <class name="Invoice">
    <id name="Id">
      <generator class="identity"/>
    </id>
    <property name="Number" />

    <many-to-one name="Customer" column="IdCustomer"/>

    <bag name="Items" cascade="all-delete-orphan" inverse="true">
      <key column="IdInvoice"/>
      <one-to-many class="InvoiceItem"/>
    </bag>

  </class>
</hibernate-mapping>
